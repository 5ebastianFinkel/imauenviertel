#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/sfinkel/dev/imauenviertel/node_modules/.pnpm/oxlint@1.8.0/node_modules/oxlint/bin/node_modules:/Users/sfinkel/dev/imauenviertel/node_modules/.pnpm/oxlint@1.8.0/node_modules/oxlint/node_modules:/Users/sfinkel/dev/imauenviertel/node_modules/.pnpm/oxlint@1.8.0/node_modules:/Users/sfinkel/dev/imauenviertel/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/sfinkel/dev/imauenviertel/node_modules/.pnpm/oxlint@1.8.0/node_modules/oxlint/bin/node_modules:/Users/sfinkel/dev/imauenviertel/node_modules/.pnpm/oxlint@1.8.0/node_modules/oxlint/node_modules:/Users/sfinkel/dev/imauenviertel/node_modules/.pnpm/oxlint@1.8.0/node_modules:/Users/sfinkel/dev/imauenviertel/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../.pnpm/oxlint@1.8.0/node_modules/oxlint/bin/oxc_language_server" "$@"
else
  exec node  "$basedir/../.pnpm/oxlint@1.8.0/node_modules/oxlint/bin/oxc_language_server" "$@"
fi
